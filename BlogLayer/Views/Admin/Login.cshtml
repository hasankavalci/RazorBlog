@{
    Layout = null;
}
@using BlogLayer.Models.Helper
@model AdminHelper
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />  
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript">
        function Kontrol()
        {
            var uyari = "";
            var kadi = $("#txtKullaniciAdi").val();
            kadi = $.trim(kadi);
            var sifre = $("#txtSifre").val();
            sifre = $.trim(sifre);
            if (kadi == "")
            {
                uyari = "1";
                $("#hata").html("Kullanıcı Adı Boş Geçilemez");
            }
            else if (sifre == "")
            {
                uyari = "1";
                $("#hata").html("Sifre Boş Geçilemez");
            }
            if (uyari == "")
            {
                return true;
            }
            else
            {
                return false;
            }
        }
    </script>
</head>
<body>
    <div class="container"> 
        <div class="col-md-4 col-md-offset-4" >
            <div class="panel panel-primary">
                <div class="panel-heading text-center">
                    Login Paneli
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="input-group">
                            @Html.TextBoxFor(x => x.UserName, new {@id="txtKullaniciAdi", @placeholder = "Kullanıcı Adi Giriniz", @class = "form-control" })
                            <div class="input-group-addon">
                                <i class="glyphicon glyphicon-user"></i> 
                            </div>
                        </div>
                        <span class="text-danger">
                            @Html.ValidationMessageFor(x => x.UserName)
                        </span>
                        <br />
                        <div class="input-group">
                            @Html.TextBoxFor(x => x.Password, new {@id="txtSifre", @placeholder = "Şifre Giriniz", @class = "form-control", @type="Password"})
                            <div class="input-group-addon">
                                <i class="glyphicon glyphicon-lock"></i>
                            </div>
                        </div>
                        <span class="text-danger">
                            @Html.ValidationMessageFor(x => x.Password)
                        </span>
                        <br />                       
                        <input class="btn btn-success pull-right" type="submit" value="Login" onclick="if(!Kontrol()) return false" />
                    }
                </div>
                <div id="hata">@ViewBag.mesaj</div>                
                <div class="panel-footer">
                    &copy; yg39409
                </div>
            </div>
        </div>
    </div>
</body>
</html>
