@model BlogLayer.Models.DataModel.Makale

@{
    ViewBag.Title = "MakaleSil";
    Layout = "~/Views/Shared/BlogAdmin.cshtml";
}
<h2>MakaleSil</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()   
    <div class="form-horizontal">
        <h4>Bu Makaleyi Silmek İstediğinize Emin misiniz?</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MakaleID)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sil" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Geri Dön", "MakaleListele","Admin")
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
